<div class="car-display">
    <% for(let vehicle of vehicles) { %>
    <div class="rows">
        <div class="card-cars">
            <img src="/images/transports/<%= vehicle.img.split('.')[0] %>.jpg" class="cars-image">
            <div class="car-details">
                <h4 class="car-name"><%= vehicle.name %>
                    <h6 class="seats"><br>Seats:<%= vehicle.seats %></h6>
                </h4>
                
            </div>
            <div class="pricing">₹ <%= vehicle.totalFare %>
                <p>Inclusive of all Taxes</p>
            </div>
            <div class="aman ml-auto">
                <form action="/<%= parentRoute %>/booking/<%= vehicle.name %>/<%= vehicle.totalFare %>" method="post">
                    <button type="submit" class="btn btn-lg btn-primary select-btn ml-auto">Select</button>
                </form>
                <br>
                <a href="#" data-toggle="modal" data-target="#<%= vehicle.name.split(' ').join('_') %>">
                    <p class="extra-details">
                        Details
                    </p>
                </a>
                <div class="modal fade" id="<%= vehicle.name.split(' ').join('_') %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Pricing</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <%= duration %> (days) X <%= vehicle.fare.outstation %>(per day fare) = <%= duration*vehicle.fare.outstation %>
                                <br>
                                <%= duration %> (days) X <%= vehicle.fare.driver %>(Driver per day charge) = <%= duration*vehicle.fare.driver %>
                                <br>
                                Total Fare: <%= duration*vehicle.fare.outstation %> + <%= duration*vehicle.fare.driver %> = <%= vehicle.totalFare %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><hr>
    </div>
    <% } %>

</div>
